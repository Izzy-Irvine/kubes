apiVersion: helm.toolkit.fluxcd.io/v2beta1
kind: HelmRelease
metadata:
  name: beans
  namespace: beans
spec:
  chart:
    spec:
      chart: beans
      sourceRef:
        kind: HelmRepository
        name: beans
  interval: 1m0s
  values:
    gameStorageClass: longhorn
    service:
      annotations:
        "mc-router.itzg.me/externalServerName": "beans.izzy.kiwi"
    bungeecordPlugins:
      download: https://saggyresourcepack.blob.core.windows.net/www/BeansGameManager-1.0.jar
    lobbyAddress: "lobby"
